<doc xmlns="https://hyperview.org/hyperview">
  <screen>
    <styles>
        {% include 'mobile/base_styles.xml' %}
        {% include 'mobile/header/_header_styles.xml' with jc="center" %}
    </styles>
    <body style="Body" safe-area="true">
        {% include 'mobile/header/_header.xml' with header_title="Hours" %}
        <list
            trigger="refresh"
            href="{% url 'timary:mobile_hours' %}?partial=true"
            action="replace-inner"
          >
                {% include 'mobile/hours/_hours.xml' %}
        </list>
        {# Reload from the edit profile screen #}
        <behavior
                trigger="on-event"
                event-name="reload"
                action="replace"
                target="Stats"
                href="{% url 'timary:mobile_hour_stats' %}"
        />
    </body>
  </screen>
</doc>
